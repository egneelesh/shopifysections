<style>
  .section-{{ section.id }} .section-wrapper {
    position: relative;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .section-wrapper {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .large-text {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: {{ section.settings.text_size }}vw;
    font-weight: {{ section.settings.text_weight }};
    color: {{ section.settings.text_color }};
    z-index: 1;
    pointer-events: none;
    white-space: nowrap;
    font-family: {{ section.settings.font_family }};
  }

  .section-{{ section.id }} .large-text.left {
    left: 0;
    padding-left: {{ section.settings.left_text_position }}%;
  }

  .section-{{ section.id }} .large-text.right {
    right: 0;
    padding-right: {{ section.settings.right_text_position }}%;
  }

  /* Desktop Product Grid (768px and above) */
  .section-{{ section.id }} .product-grid {
    display: flex;
    gap: {{ section.settings.product_gap }}px;
    justify-content: center;
    padding: 60px 20px;
    position: relative;
    z-index: 2;
    flex-wrap: wrap;
  }

  .section-{{ section.id }} .product-tile {
    flex: 0 0 auto;
    width: {{ section.settings.product_width }}px;
    text-align: center;
    opacity: 0; /* Start hidden for GSAP animation */
    transform: scale(1.2); /* Start scaled for GSAP animation */
  }

  /* Mobile Swiper Container (767px and below) */
  .section-{{ section.id }} .swiper-container {
    display: none;
    padding: 40px 20px 60px;
    position: relative;
    z-index: 2;
  }

  .section-{{ section.id }} .swiper-slide {
    text-align: center;
    display: flex;
    justify-content: center;
    height: auto;
  }

  .section-{{ section.id }} .product-card {
    background: {{ section.settings.card_background }};
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_border_radius }}px;
    box-shadow: {{ section.settings.card_shadow }};
    transition: transform 0.3s ease;
    width: 100%;
    max-width: {{ section.settings.product_width }}px;
    margin: 0 auto;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .section-{{ section.id }} .product-card:hover {
    transform: translateY(-{{ section.settings.hover_lift }}px);
  }

  .section-{{ section.id }} .product-card img {
    width: 100%;
    height: auto;
    border-radius: {{ section.settings.image_border_radius }}px;
    flex-shrink: 0;
  }

  .section-{{ section.id }} .product-title {
    font-size: {{ section.settings.title_font_size }}px;
    margin-top: 10px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    flex-grow: 1;
  }

  .section-{{ section.id }} .product-price {
    color: {{ section.settings.price_color }};
    font-size: {{ section.settings.price_font_size }}px;
    margin-top: 5px;
    flex-shrink: 0;
  }

  /* Mobile Styles (767px and below) */
  @media (max-width: 767px) {
    .section-{{ section.id }} .product-grid {
      display: none;
    }

    .section-{{ section.id }} .swiper-container {
      display: block;
    }

    .section-{{ section.id }} .large-text {
      display: {{ section.settings.mobile_text_display }};
    }
  }

  /* Desktop Styles (768px and above) */
  @media (min-width: 768px) {
    .section-{{ section.id }} .product-grid {
      display: flex;
    }

    .section-{{ section.id }} .swiper-container {
      display: none;
    }
  }

  /* Swiper Navigation Styles */
  .section-{{ section.id }} .swiper-button-next,
  .section-{{ section.id }} .swiper-button-prev {
    background: {{ section.settings.arrow_background }};
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    border-radius: {{ section.settings.arrow_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -30px;
    box-shadow: {{ section.settings.arrow_shadow }};
    border: {{ section.settings.arrow_border_width }}px solid {{ section.settings.arrow_border_color }};
    transition: all 0.3s ease;
  }

  .section-{{ section.id }} .swiper-button-next:after,
  .section-{{ section.id }} .swiper-button-prev:after {
    font-size: {{ section.settings.arrow_icon_size }}px;
    color: {{ section.settings.arrow_color }};
    font-weight: bold;
  }

  .section-{{ section.id }} .swiper-button-next:hover,
  .section-{{ section.id }} .swiper-button-prev:hover {
    background: {{ section.settings.arrow_hover_background }};
    transform: scale({{ section.settings.arrow_hover_scale }});
  }

  .section-{{ section.id }} .swiper-button-next:hover:after,
  .section-{{ section.id }} .swiper-button-prev:hover:after {
    color: {{ section.settings.arrow_hover_color }};
  }

  .section-{{ section.id }} .swiper-pagination {
    bottom: 20px;
  }

  .section-{{ section.id }} .swiper-pagination-bullet {
    background: {{ section.settings.dot_color }};
    opacity: 0.5;
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    transition: all 0.3s ease;
  }

  .section-{{ section.id }} .swiper-pagination-bullet-active {
    background: {{ section.settings.dot_active_color }};
    opacity: 1;
    transform: scale({{ section.settings.dot_active_scale }});
  }

  /* Custom arrow positions */
  .section-{{ section.id }} .swiper-button-next {
    right: {{ section.settings.arrow_position }}px;
  }

  .section-{{ section.id }} .swiper-button-prev {
    left: {{ section.settings.arrow_position }}px;
  }
</style>

<section class="section-{{ section.id }}">
  <div class="section-wrapper">
    <!-- Large Overlay Texts -->
    {% if section.settings.show_left_text %}
      <div class="large-text left">
        {{ section.settings.left_text }}
      </div>
    {% endif %}
    
    {% if section.settings.show_right_text %}
      <div class="large-text right">
        {{ section.settings.right_text }}
      </div>
    {% endif %}

    <!-- Desktop Product Grid -->
    <div class="product-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'product' -%}
            {%- assign product = block.settings.product -%}
            <div class="product-tile" {{ block.shopify_attributes }}>
              <div class="product-card">
                {% if product != blank %}
                  {% if product.featured_image %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 360 }}" 
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="360"
                      height="{{ 360 | divided_by: product.featured_image.aspect_ratio | round }}"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                  <div class="product-title">{{ product.title }}</div>
                  <div class="product-price">{{ product.price | money }}</div>
                {% else %}
                  {% if block.settings.fallback_image != blank %}
                    <img 
                      src="{{ block.settings.fallback_image | image_url: width: 360 }}" 
                      alt="{{ block.settings.fallback_image.alt | escape }}"
                      loading="lazy"
                      width="360"
                      height="{{ 360 | divided_by: block.settings.fallback_image.aspect_ratio | round }}"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                  <div class="product-title">{{ block.settings.fallback_title }}</div>
                  <div class="product-price">{{ block.settings.fallback_price | money }}</div>
                {% endif %}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <!-- Mobile Swiper Slider -->
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'product' -%}
              {%- assign product = block.settings.product -%}
              <div class="swiper-slide" {{ block.shopify_attributes }}>
                <div class="product-card">
                  {% if product != blank %}
                    {% if product.featured_image %}
                      <img 
                        src="{{ product.featured_image | image_url: width: 360 }}" 
                        alt="{{ product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="360"
                        height="{{ 360 | divided_by: product.featured_image.aspect_ratio | round }}"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                    <div class="product-title">{{ product.title }}</div>
                    <div class="product-price">{{ product.price | money }}</div>
                  {% else %}
                    {% if block.settings.fallback_image != blank %}
                      <img 
                        src="{{ block.settings.fallback_image | image_url: width: 360 }}" 
                        alt="{{ block.settings.fallback_image.alt | escape }}"
                        loading="lazy"
                        width="360"
                        height="{{ 360 | divided_by: block.settings.fallback_image.aspect_ratio | round }}"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                    <div class="product-title">{{ block.settings.fallback_title }}</div>
                    <div class="product-price">{{ block.settings.fallback_price | money }}</div>
                  {% endif %}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
      
      <!-- Swiper Pagination -->
      {% if section.settings.show_pagination %}
        <div class="swiper-pagination"></div>
      {% endif %}
      
      <!-- Swiper Navigation -->
      {% if section.settings.show_navigation %}
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      {% endif %}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = "{{ section.id }}";
  const sectionElement = document.querySelector('.section-' + sectionId);
  
  if (!sectionElement) return;

  let swiper = null;

  // Initialize Swiper only for mobile (below 768px)
  function initSwiper() {
    if (window.innerWidth < 768 && typeof Swiper !== 'undefined') {
      const swiperContainer = sectionElement.querySelector('.swiper-container');
      if (swiperContainer && !swiper) {
        swiper = new Swiper(swiperContainer, {
          slidesPerView: {{ section.settings.mobile_slides }},
          spaceBetween: {{ section.settings.mobile_space_between }},
          loop: {{ section.settings.loop }},
          {% if section.settings.autoplay %}
          autoplay: {
            delay: {{ section.settings.autoplay_delay }},
            disableOnInteraction: false,
          },
          {% endif %}
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
            dynamicBullets: {{ section.settings.dynamic_bullets }},
          },
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          grabCursor: {{ section.settings.grab_cursor }},
        });

        // Pause autoplay on hover if setting is enabled
        {% if section.settings.pause_on_hover %}
        swiperContainer.addEventListener('mouseenter', function() {
          if (swiper.autoplay.running) {
            swiper.autoplay.stop();
          }
        });
        
        swiperContainer.addEventListener('mouseleave', function() {
          if (!swiper.autoplay.running) {
            swiper.autoplay.start();
          }
        });
        {% endif %}
      }
    } else {
      // Destroy Swiper if it exists and we're on desktop
      if (swiper) {
        swiper.destroy(true, true);
        swiper = null;
      }
    }
  }

  // Initialize GSAP animations for desktop
  function initGSAPAnimations() {
    if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
      gsap.registerPlugin(ScrollTrigger);

      const sectionWrapper = sectionElement.querySelector('.section-wrapper');
      if (!sectionWrapper) return;

      // Animate TRENDING text (left)
      const leftText = sectionElement.querySelector(".large-text.left");
      if (leftText) {
        gsap.fromTo(leftText,
          { 
            x: 0, 
            opacity: 1 
          },
          {
            x: "-100%",
            opacity: 0,
            scrollTrigger: {
              trigger: sectionWrapper,
              start: "top 80%",
              end: "bottom 20%",
              scrub: 1,
              markers: false
            }
          }
        );
      }

      // Animate PRODUCTS text (right)
      const rightText = sectionElement.querySelector(".large-text.right");
      if (rightText) {
        gsap.fromTo(rightText,
          { 
            x: 0, 
            opacity: 1 
          },
          {
            x: "100%",
            opacity: 0,
            scrollTrigger: {
              trigger: sectionWrapper,
              start: "top 80%",
              end: "bottom 20%",
              scrub: 1,
              markers: false
            }
          }
        );
      }

      // Animate product tiles for desktop only
      if (window.innerWidth >= 768) {
        const productTiles = sectionElement.querySelectorAll(".product-tile");
        if (productTiles.length > 0) {
          gsap.fromTo(productTiles,
            {
              opacity: 0,
              scale: 1.2,
              y: 50
            },
            {
              opacity: 1,
              scale: 1,
              y: 0,
              duration: 0.8,
              ease: "power2.out",
              stagger: {
                amount: 0.6,
                from: "center"
              },
              scrollTrigger: {
                trigger: sectionWrapper,
                start: "top 70%",
                end: "bottom 30%",
                toggleActions: "play none none reverse",
                markers: false
              }
            }
          );
        }
      }

      // Refresh ScrollTrigger after all animations are set up
      ScrollTrigger.refresh();
    } else {
      console.warn('GSAP or ScrollTrigger not loaded - falling back to CSS animations');
      
      // Fallback: Show elements immediately if GSAP fails
      const productTiles = sectionElement.querySelectorAll(".product-tile");
      productTiles.forEach(tile => {
        tile.style.opacity = '1';
        tile.style.transform = 'scale(1)';
      });
    }
  }

  // Initialize based on current screen size
  initSwiper();
  initGSAPAnimations();

  // Reinitialize on window resize
  let resizeTimeout;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(function() {
      initSwiper();
      // Reinitialize GSAP animations on resize
      if (typeof ScrollTrigger !== 'undefined') {
        ScrollTrigger.refresh();
      }
    }, 250);
  });
});
</script>

