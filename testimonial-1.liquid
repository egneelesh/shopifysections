<style>
.section-{{ section.id }}{
background: {{ section.settings.bg_color }};
}
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
}

.testimonial-rating-bar {
  display: flex;
  align-items: center;
  justify-content: {% if section.settings.content_align == 'left' %}start{% elsif section.settings.content_align == 'center' %}center{% else %}end{% endif %};
  gap: 8px;
  margin-bottom: 30px;
}
.testimonial-stars .star {
  color: #e1b44a;
  font-size: 1.2em;
}
.testimonial-star-text {
  margin-left: 8px;
}
.testimonial-swiper {
  margin-bottom: 20px;
  width: 100%;
  padding: 15px 0 !important;
}
.swiper-wrapper {
  align-items: stretch;
}
.swiper-slide {
  display: flex;
  height: auto;
  justify-content: center;
}
.testimonial-card {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 0 0.5em #ededed;
  padding: 24px;
  text-align: left;
  min-width: 260px;
  max-width: 350px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 0 auto;
  height: 100%;
}
.testimonial-card:hover {
  box-shadow: 0 0 10px 0 #1669322e;
}
.testimonial-card .testimonial-stars .star {
  color: #e1b44a;
  font-size: 1.1em;
  margin-bottom: 10px;
}
.testimonial-review {
  font-size: 14px;
  margin-bottom: 18px;
  margin-top: 0px;
  color: #465145;
}
.testimonial-meta {
  font-size: 1em;
  color: #1a1a1a;
  border-top: 1px solid #ececec;
  margin-top: auto;
  padding-top: 10px;
}
.testimonial-name {
  font-weight: 600;
  font-size: 14px;
}
.testimonial-location {
  font-size: 12px;
  color: #697066;
  margin-left: 5px;
}
.testimonial-footer {
  background: #f5f2e7;
  padding: 8px 18px;
  border-radius: 24px;
  color: hsl(140 15% 15%);
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 420px;
  margin: auto;
}
.footer-star {
  margin-right: 5px;
}
@media screen and (max-width: 600px) {
  .testimonial-rating-bar {
    flex-direction: column-reverse;
  }
}

/* Swiper Style Adjustments */
.whistlestop-swiper-button {
    position: absolute;
    transform: translate(0%, -50%);
    top: 40%;
    z-index: 9;
    height: 35px;
    width: 35px;
    background: linear-gradient(135deg, #dc54dc, #830081) !important;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    padding: 8px;
    color: #fff;
    cursor: pointer;
}

.whistlestop-swiper-button-next {
    right: 15px;
}

.whistlestop-swiper-button-prev {
    left: 15px;
}

.whistlestop-swiper-button-prev svg {
    transform: rotate(180deg);
}

.whistlestop-swiper-pagination {
    margin-top: 30px;
    text-align: center;
}

.whistlestop-swiper-pagination .swiper-pagination-bullet {
    border: 2px solid #830081;
    height: 10px;
    width: 10px;
    background: transparent;
    opacity: 1;
    transition: 0.4s;
    cursor: pointer;
}

.whistlestop-swiper-pagination .swiper-pagination-bullet-active {
    background: #830081;
    width: 30px;
    border-radius: 15px;
}

</style>

<section class="section-{{ section.id }} section-{{ section.id }}-padding">
  <div class="container half-pad animate-section animate-section-margin clearfix down go center">
    <div class="section_content-box testimonial-header {% if section.settings.content_align == 'left' %}left{% elsif section.settings.content_align == 'center' %}center{% else %}right{% endif %}">
      <h2 class="review-title">{{ section.settings.heading }}</h2>
      <div class="section-description subtitle subhead">{{ section.settings.description }}</div>
      <div class="testimonial-rating-bar">
        {% if section.settings.show_stars %}
          <span class="testimonial-stars">
            {% for i in (1..5) %}
              <span class="star">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star w-4 h-4 fill-accent text-accent" data-lov-id="src/components/Hero.tsx:64:18" data-lov-name="Star" data-component-path="src/components/Hero.tsx" data-component-line="64" data-component-file="Hero.tsx" data-component-name="Star" data-component-content="%7B%22className%22%3A%22w-4%20h-4%20fill-accent%20text-accent%22%7D"><path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path></svg>
              </span>
            {% endfor %}
          </span>
        {% endif %}
        <span class="testimonial-star-text">{{ section.settings.star_text }}</span>
      </div>
    </div>

    <!-- Swiper Slider -->
    <div class="swiper testimonial-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-stars">
            {% for i in (1..block.settings.rating) %}
              <span class="star">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star w-4 h-4 fill-accent text-accent" data-lov-id="src/components/Hero.tsx:64:18" data-lov-name="Star" data-component-path="src/components/Hero.tsx" data-component-line="64" data-component-file="Hero.tsx" data-component-name="Star" data-component-content="%7B%22className%22%3A%22w-4%20h-4%20fill-accent%20text-accent%22%7D"><path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path></svg>
              </span>
            {% endfor %}
          </div>
          <p class="testimonial-review">{{ block.settings.review }}</p>
          <div class="testimonial-meta">
              <span class="testimonial-name">{{ block.settings.name }}</span>
          </div>
          {% if block.settings.location or block.settings.product %}
            <span class="testimonial-location">
              {{ block.settings.location }}{% if block.settings.location and block.settings.product %} â€¢ {% endif %}{{ block.settings.product }}
            </span>
          {% endif %}
        </div>
        {% endfor %}
      </div>

      {% if section.settings.show_pagination %}
        <!-- Pagination (dots) -->
        <div class="whistlestop-swiper-pagination testimonial-slider_pagination"></div>
      {% endif %}

      {% if section.settings.show_arrow %}
        <!-- Navigation buttons -->
        <div class="whistlestop-swiper-button whistlestop-swiper-button-next testimonial-slider_button-next">
          {{ 'icon-right-arrow.svg' | inline_asset_content }}
        </div>
        <div class="whistlestop-swiper-button whistlestop-swiper-button-prev testimonial-slider_button-prev">
          {{ 'icon-right-arrow.svg' | inline_asset_content }}
        </div>
      {% endif %}

    </div>
    {% if section.settings.show_link %}
        <a href="{{ section.settings.link_url }}" class="center review-link" target="_blank" rel="noopener">
            <svg class="footer-star" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star w-4 h-4 fill-accent text-accent" data-lov-id="src/components/Hero.tsx:64:18" data-lov-name="Star" data-component-path="src/components/Hero.tsx" data-component-line="64" data-component-file="Hero.tsx" data-component-name="Star" data-component-content="%7B%22className%22%3A%22w-4%20h-4%20fill-accent%20text-accent%22%7D"><path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path></svg>  
            {{ section.settings.footer_text }}
        </a>
    {% endif %}
  </div>
</section>

<!-- Swiper JS and initialization -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var swiper = new Swiper('.testimonial-swiper', {
      slidesPerView: {{ section.settings.slides_per_view_desktop }},
      spaceBetween: 24,
      navigation: {
        nextEl: '.testimonial-slider_button-next',
        prevEl: '.testimonial-slider_button-prev',
      },
      pagination: {
        el: '.testimonial-slider_pagination',
        clickable: true,
      },
      loop: {{ section.settings.loop }},
      {% if section.settings.autoplay %}
        autoplay: {
          delay: {{ section.settings.autoplay_delay }},
          disableOnInteraction: false,
        },
      {% endif %}
      breakpoints: {
        320: {
          slidesPerView: {{ section.settings.slides_per_view_mobile }}.5,
          spaceBetween: 8,
        },
        768: {
          slidesPerView: {{ section.settings.slides_per_view_tablet }}.5,
          spaceBetween: 16,
        },
        1024: {
          slidesPerView: {{ section.settings.slides_per_view_desktop }}.5,
          spaceBetween: 24,
        }
      }
    });
  });
</script>

