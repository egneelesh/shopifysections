<style>
  .section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    background-color: {{ section.settings.background_color }};
    font-family: {{ section.settings.font_family }};
  }
  
  .quality-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }
  
  .quality-title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    margin-bottom: 15px;
    font-weight: {{ section.settings.title_font_weight }};
  }
  
  .quality-subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    color: {{ section.settings.subtitle_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .quality-features {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.feature_spacing }}px;
  }
  
  @media (max-width: 989px) {
    .quality-features {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }
  }
  
  @media (max-width: 749px) {
    .quality-features {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
  }
  
  .quality-feature {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    box-shadow: {{ section.settings.card_shadow }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: {{ section.settings.feature_alignment }};
    display: flex;
    gap: 15px;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
  
  .feature-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background-color: {{ section.settings.icon_background }};
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .feature-icon img {
    width: 85%;
    height: 85%;
    object-fit: contain;
  }
  
  .feature-content {
    flex: 1;
  }
  
  .feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    color: {{ section.settings.feature_title_color }};
    margin-bottom: 10px;
    font-weight: {{ section.settings.feature_title_weight }};
  }
  
  .feature-description {
    color: {{ section.settings.feature_text_color }};
    line-height: 1.6;
    font-size: {{ section.settings.feature_text_size }}px;
    margin: 0;
  }
  
  .highlight {
    background-color: {{ section.settings.highlight_color }};
    color: white;
  }
  
  .highlight .feature-icon {
    background-color: rgba(255,255,255,0.2);
  }
  
  .highlight .feature-title,
  .highlight .feature-description {
    color: white;
  }
  
  @media (max-width: 768px) {
    .quality-title {
      font-size: calc({{ section.settings.title_font_size }}px * 0.8);
    }
    
    .quality-subtitle {
      font-size: calc({{ section.settings.subtitle_font_size }}px * 0.9);
    }
    
    .quality-feature {
      padding: 20px;
      flex-direction: column;
      text-align: center;
    }
    
    .feature-icon {
      margin: 0 auto 15px;
    }
  }
</style>

<section class="section-{{ section.id }}">
  <div class="page-width">
    <div class="quality-header">
      <h2 class="quality-title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="quality-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    
    <div class="quality-features">
      {% for block in section.blocks %}
        <div class="quality-feature {% if block.settings.highlight %}highlight{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.icon_image != blank %}
            <div class="feature-icon">
              <img 
                src="{{ block.settings.icon_image | image_url: width: 1000 }}" 
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="auto"
                height="auto"
              >
            </div>
          {% endif %}
          
          <div class="feature-content">
            <h3 class="feature-title">{{ block.settings.title }}</h3>
            <p class="feature-description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

